---
import '../assets/style.css'
import H1 from '../components/H1.astro'
import Section from '../components/Section.astro'
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Josh Kaye Upwork Portfolio</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	</head>
	<body class="font-['Poppins','Helvetica','sans-serif','serif'] mb-24">
		<Section>
			<header 
				id="top"
				class="mb-6 py-6 border-b-4 border-sky-100"
			>
				<H1>
					Josh Kaye - Upwork Portfolio
				</H1>
				<span class="italic opacity-60 select-none">
					Full stack web developer
				</span>
			</header>
		</Section>
		<slot />
	</body>
</html>

