---
import '../assets/style.css'
import Section from '../components/Section.astro'
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Josh Kaye Upwork Portfolio</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	</head>
	<body class="font-['Poppins','Helvetica','sans-serif','serif']">
		<Section>
			<header 
				id="top"
				class="mb-6 py-6 border-b-4 border-cyan-100"
			>
				<a 
					href="/"
					class="flex items-center gap-2 shrink-0mb-3 text-cyan-800 select-none no-underline hover:underline hover:bg-transparent hover:text-cyan-800"
				>
					<img 
						src="/img/josh-avatar.webp"
						class="w-16 h-16 rounded-full"
					/>
					<div>
						<div class=" text-xl font-medium ">
							Josh Kaye - Web Developer Portfolio
						</div>
						<div class="italic opacity-60 select-none">
							Full stack web developer
						</div>
					</div>
				</a>
			</header>
		</Section>

		<slot />

		<footer class="py-12 mt-12 bg-sky-50">
			<Section>
				Back to: <br />
				<a href="#top">Top of page</a><br />
				<a href="/">Home page</a>
			</Section>
		</footer>
	</body>
</html>

